<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mokoko.contacts.GroupMapper">

    <sql id="ContactGroupColumns">
        id
        , user_id, name, sort_no, group_type, important
    </sql>

    <resultMap type="Group" id="GroupResultMap">
        <result property="userID" column="user_id"/>
        <result property="groupType" column="group_type"/>
        <result property="sortNumber" column="sort_no"/>
        <result property="contactsCount" column="contacts_count"/>
    </resultMap>

    <select id="selectGroups" resultMap="GroupResultMap">
        SELECT cg.id,
               cg.user_id,
               name,
               important,
               group_type,
               cg.sort_no,
               COUNT(c.id) contacts_count
        FROM contact_group cg
                 LEFT JOIN contact c
                           ON cg.id = c.group_id
        WHERE cg.user_id = #{userID}
          AND group_type = 0
        GROUP BY cg.id
        ORDER BY sort_no
    </select>

    <insert id="insertGroup">
        INSERT INTO contact_group (user_id,
                                   name,
                                   sort_no)
        VALUES (#{userID},
                #{name},
                #{sortNumber})
    </insert>

    <update id="updateGroup">
        UPDATE contact_group
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null">
                name = #{name},
            </if>
            <if test="sortNumber != null">
                sort_no = #{sortNumber},
            </if>
        </trim>
        WHERE id = #{id}
    </update>

    <delete id="deleteGroup">
        DELETE FROM contact_group
        WHERE id in
        <foreach collection="idList" item="id" index="i" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </delete>

</mapper>